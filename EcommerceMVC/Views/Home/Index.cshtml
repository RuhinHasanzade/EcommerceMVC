@{
    Layout = "_Layout";
}

    <section class="relative bg-secondary py-20 lg:py-32">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div>
                    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6 text-balance leading-tight">
                        Keyfiyyət və stil bir arada
                    </h1>
                    <p class="text-lg text-gray-700 mb-8 text-pretty leading-relaxed">
                        Premium məhsullarımızla stilinizi tamamlayın. Yeni kolleksiyamızı kəşf edin və özünüzə uyğun olanı tapın.
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <a href="#products" class="bg-primary text-white px-8 py-3 rounded-full hover:bg-accent-dark transition-colors">
                            Məhsullara bax
                        </a>
                        <a href="#categories" class="border-2 border-primary text-primary px-8 py-3 rounded-full hover:bg-primary hover:text-white transition-colors">
                            Kateqoriyalar
                        </a>
                    </div>
                </div>
                <div class="relative">
                    <img src="/placeholder.svg?height=500&width=500" alt="Hero məhsul" class="rounded-3xl w-full">
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Categories -->
    <section id="categories" class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-bold text-center mb-12">Kateqoriyalar</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <div class="group cursor-pointer">
                    <div class="bg-secondary rounded-2xl overflow-hidden mb-4 aspect-square">
                        <img src="/placeholder.svg?height=300&width=300" alt="Qadın geyimləri" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                    </div>
                    <h3 class="text-center font-semibold text-lg">Qadın geyimləri</h3>
                </div>
                <div class="group cursor-pointer">
                    <div class="bg-secondary rounded-2xl overflow-hidden mb-4 aspect-square">
                        <img src="/placeholder.svg?height=300&width=300" alt="Kişi geyimləri" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                    </div>
                    <h3 class="text-center font-semibold text-lg">Kişi geyimləri</h3>
                </div>
                <div class="group cursor-pointer">
                    <div class="bg-secondary rounded-2xl overflow-hidden mb-4 aspect-square">
                        <img src="/placeholder.svg?height=300&width=300" alt="Aksesuarlar" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                    </div>
                    <h3 class="text-center font-semibold text-lg">Aksesuarlar</h3>
                </div>
                <div class="group cursor-pointer">
                    <div class="bg-secondary rounded-2xl overflow-hidden mb-4 aspect-square">
                        <img src="/placeholder.svg?height=300&width=300" alt="Ayaqqabılar" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                    </div>
                    <h3 class="text-center font-semibold text-lg">Ayaqqabılar</h3>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section id="products" class="py-16 bg-secondary">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between mb-12">
                <h2 class="text-3xl font-bold">Seçilmiş məhsullar</h2>
                <a href="#" class="text-accent hover:text-accent-dark font-semibold">Hamısına bax →</a>
            </div>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Product 1 -->
                <div class="bg-white rounded-2xl overflow-hidden group cursor-pointer">
                    <div class="relative overflow-hidden aspect-[3/4] bg-gray-100">
                        <img src="/placeholder.svg?height=400&width=300" alt="Məhsul 1" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                        <button class="absolute top-4 right-4 bg-white rounded-full p-2 opacity-0 group-hover:opacity-100 transition-opacity" aria-label="Bəyən">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                        </button>
                    </div>
                    <div class="p-4">
                        <h3 class="font-semibold text-lg mb-1">Premium Jacket</h3>
                        <p class="text-gray-600 text-sm mb-2">Qış kolleksiyası</p>
                        <div class="flex items-center justify-between">
                            <span class="text-xl font-bold">159.99 ₼</span>
                            <button class="bg-primary text-white px-4 py-2 rounded-full text-sm hover:bg-accent-dark transition-colors">Səbətə at</button>
                        </div>
                    </div>
                </div>

                <!-- Product 2 -->
                <div class="bg-white rounded-2xl overflow-hidden group cursor-pointer">
                    <div class="relative overflow-hidden aspect-[3/4] bg-gray-100">
                        <img src="/placeholder.svg?height=400&width=300" alt="Məhsul 2" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                        <button class="absolute top-4 right-4 bg-white rounded-full p-2 opacity-0 group-hover:opacity-100 transition-opacity" aria-label="Bəyən">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                        </button>
                    </div>
                    <div class="p-4">
                        <h3 class="font-semibold text-lg mb-1">Elegant Dress</h3>
                        <p class="text-gray-600 text-sm mb-2">Yay kolleksiyası</p>
                        <div class="flex items-center justify-between">
                            <span class="text-xl font-bold">89.99 ₼</span>
                            <button class="bg-primary text-white px-4 py-2 rounded-full text-sm hover:bg-accent-dark transition-colors">Səbətə at</button>
                        </div>
                    </div>
                </div>

                <!-- Product 3 -->
                <div class="bg-white rounded-2xl overflow-hidden group cursor-pointer">
                    <div class="relative overflow-hidden aspect-[3/4] bg-gray-100">
                        <img src="/placeholder.svg?height=400&width=300" alt="Məhsul 3" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                        <button class="absolute top-4 right-4 bg-white rounded-full p-2 opacity-0 group-hover:opacity-100 transition-opacity" aria-label="Bəyən">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                        </button>
                    </div>
                    <div class="p-4">
                        <h3 class="font-semibold text-lg mb-1">Casual Sneakers</h3>
                        <p class="text-gray-600 text-sm mb-2">Sport seriyası</p>
                        <div class="flex items-center justify-between">
                            <span class="text-xl font-bold">129.99 ₼</span>
                            <button class="bg-primary text-white px-4 py-2 rounded-full text-sm hover:bg-accent-dark transition-colors">Səbətə at</button>
                        </div>
                    </div>
                </div>

                <!-- Product 4 -->
                <div class="bg-white rounded-2xl overflow-hidden group cursor-pointer">
                    <div class="relative overflow-hidden aspect-[3/4] bg-gray-100">
                        <img src="/placeholder.svg?height=400&width=300" alt="Məhsul 4" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                        <button class="absolute top-4 right-4 bg-white rounded-full p-2 opacity-0 group-hover:opacity-100 transition-opacity" aria-label="Bəyən">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                            </svg>
                        </button>
                    </div>
                    <div class="p-4">
                        <h3 class="font-semibold text-lg mb-1">Leather Handbag</h3>
                        <p class="text-gray-600 text-sm mb-2">Premium aksesuar</p>
                        <div class="flex items-center justify-between">
                            <span class="text-xl font-bold">199.99 ₼</span>
                            <button class="bg-primary text-white px-4 py-2 rounded-full text-sm hover:bg-accent-dark transition-colors">Səbətə at</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Special Offer Banner -->
    <section class="py-20 bg-primary text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div>
                    <h2 class="text-4xl font-bold mb-4 text-balance">Yay endirimləri başladı!</h2>
                    <p class="text-lg mb-6 text-gray-300 text-pretty leading-relaxed">Seçilmiş məhsullarda 50%-ə qədər endirimlər. Qaçırmayın!</p>
                    <a href="#" class="inline-block bg-accent text-white px-8 py-3 rounded-full hover:bg-accent-dark transition-colors">
                        İndi alış-veriş et
                    </a>
                </div>
                <div class="relative">
                    <img src="/placeholder.svg?height=400&width=600" alt="Endirım" class="rounded-3xl w-full">
                </div>
            </div>
        </div>
    </section>

    <!-- Newsletter -->
    <section class="py-16 bg-white">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold mb-4">Xəbərlərimizə abunə olun</h2>
            <p class="text-gray-600 mb-8 text-pretty">Yeni məhsullar və eksklüziv endirimlər haqqında ilk siz öyrənin.</p>
            <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
                <input type="email" placeholder="E-mail ünvanınız" class="flex-1 px-6 py-3 border-2 border-gray-300 rounded-full focus:outline-none focus:border-accent" required>
                <button type="submit" class="bg-primary text-white px-8 py-3 rounded-full hover:bg-accent-dark transition-colors">
                    Abunə ol
                </button>
            </form>
        </div>
    </section>
